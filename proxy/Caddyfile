{$DOMAIN:evetools.local} {
    encode zstd gzip

    # TLS configuration
    tls {$TLS_EMAIL:internal}

    log {
        output stdout
        format console
    }

    # Maintenance page when backend is down (502/503)
    handle_errors {
        @backend_down expression `{err.status_code} in [502, 503]`
        handle @backend_down {
            root * /srv
            rewrite * /maintenance.html
            file_server
        }
    }

    # Mercure real-time hub
    handle /.well-known/mercure* {
        reverse_proxy app:80
    }

    # Backend API - handle first
    handle /api/* {
        reverse_proxy app:80
    }

    # Auth routes - except callback which needs frontend
    handle /auth/eve/redirect {
        reverse_proxy app:80
    }

    handle /auth/eve/callback {
        # Let frontend handle the OAuth callback
        root * /srv/frontend
        rewrite * /index.html
        file_server
    }

    handle /auth/* {
        reverse_proxy app:80
    }

    handle /_profiler/* {
        reverse_proxy app:80
    }

    handle /_wdt/* {
        reverse_proxy app:80
    }

    # API Platform documentation assets
    handle /bundles/* {
        reverse_proxy app:80
    }

    # Frontend - serve static files (fallback)
    handle {
        root * /srv/frontend
        try_files {path} /index.html
        file_server
    }
}
